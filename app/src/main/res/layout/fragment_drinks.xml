<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:id="@+id/linear_drinks"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <TextView
            android:id="@+id/txt_drinks_ueberschrift"
            android:layout_width="match_parent"
            android:layout_height="71dp"
            android:gravity="center"
            android:padding="16dp"
            android:text="@string/drinks"
            android:textSize="18sp" />

        <ImageView
            android:id="@+id/image_drinks"
            android:layout_width="match_parent"
            android:layout_height="87dp"
            android:padding="8dp"
            android:contentDescription="@string/drinks"
            app:srcCompat="@drawable/button_drinks" />

        <TextView
            android:id="@+id/text_carbs"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingLeft="16dp"
            android:paddingTop="16dp"
            android:paddingRight="16dp"
            android:text="@string/carbs_info"
            android:textSize="14sp" />

    </LinearLayout>
</android.support.constraint.ConstraintLayout>