<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/container"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">


    <LinearLayout
        android:id="@+id/linear_wissen"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <LinearLayout
            android:id="@+id/linear1_wissen"
            android:layout_width="match_parent"
            android:layout_height="661dp"
            android:orientation="vertical"
            android:padding="@dimen/activity_horizontal_margin">

            <ImageButton
                android:id="@+id/junks_button"
                android:layout_width="wrap_content"
                android:layout_height="59dp"
                android:background="@null"


                android:scaleType="fitCenter"
                app:srcCompat="@drawable/button_junks" />

            <ImageButton
                android:id="@+id/nutsoils_button"
                android:layout_width="wrap_content"
                android:layout_height="75dp"
                android:background="@null"
                android:padding="16dp"
                android:scaleType="fitCenter"
                app:srcCompat="@drawable/button_nutsoils" />

            <ImageButton
                android:id="@+id/proteins_button"
                android:layout_width="wrap_content"
                android:layout_height="78dp"
                android:background="@null"
                android:padding="16dp"
                android:scaleType="fitCenter"
                app:srcCompat="@drawable/button_proteins" />

            <ImageButton
                android:id="@+id/carbs_button"
                android:layout_width="wrap_content"
                android:layout_height="86dp"
                android:background="@null"
                android:contentDescription="@string/carbs"
                android:padding="16dp"
                android:scaleType="fitCenter"
                app:srcCompat="@drawable/button_carbs"
                tools:layout_width="wrap_content" />

            <ImageButton
                android:id="@+id/veggies_button"
                android:layout_width="wrap_content"
                android:layout_height="78dp"
                android:background="@null"
                android:padding="16dp"
                android:scaleType="fitCenter"
                app:srcCompat="@drawable/button_veggies" />

            <ImageButton
                android:id="@+id/drinks_button"
                android:layout_width="wrap_content"
                android:layout_height="65dp"
                android:background="@null"
                android:scaleType="fitCenter"
                app:srcCompat="@drawable/button_drinks" />

        </LinearLayout>

    </LinearLayout>
</android.support.constraint.ConstraintLayout>